<h3>Add Review</h3>
<div class="col-lg-4 px-0">
<%= bootstrap_form_for([@post, @post.comments.build]) do |f| %>
    <%= f.text_field(:username, required: true )%>
    <%= f.text_area :body, label: "Comment" %><br>

    <%= f.form_group :terms, help: "Optional Help Text" do %>
        <%= f.check_box :body, label: "I agree to the Terms of Service" %>
    <% end %>

    <%= f.submit "Submit comment" %>
</div>
<% end %>